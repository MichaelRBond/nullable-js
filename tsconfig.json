{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": ["@types/jest"],
    "baseUrl": "./src/",
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
